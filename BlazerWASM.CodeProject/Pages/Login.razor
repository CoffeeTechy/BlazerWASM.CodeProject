@page "/login"
@using System.ComponentModel.DataAnnotations
<Blazicons.Base.BlaziconBase></Blazicons.Base.BlaziconBase>


<PageTitle>Login</PageTitle>

<style>
    input:invalid {
        border-color: red;
    }

    .error {
        display: block;
    }   

    input:optional {
        border-style:dashed;
    }

    div.logindetail
    {
        margin-top:13px;
        border:solid;
        height:auto;
        padding:15px;
    }

    p {
        margin-left:10px;
    }

    label.logindetail {
        margin-bottom:10px;
    }
    button.btn-success {
        margin-bottom:10px;
        margin-top:5px;
    }
    div.form-group {
        margin:5px;
    }

    button.btn-close {
        font-size:28px;
    }

    Svg.info {
        margin-left:40px;
    }

</style>

<h3>Login Screen</h3>


@if (showlogin)
{
    <form @onsubmit="Submit" method="post">
        @* <DataAnnotationsValidator />
    <ValidationSummary /> *@
        <div class="form-group">
            <label for="uname">User Name:</label>
            <input id="uname" type="text" placeholder="Username" @bind="uname" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input id="email" type="email" placeholder="Email" @bind="mail" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="phone">Phone:</label>
            <input id="phone" type="text" placeholder="Phone Number" @bind="number" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
        <button class="btn btn-close" @onclick="CloseLogin" />
        
    </form>
}

<p>
    @if (!showlogin)
    {
        <button class="btn btn-success" @onclick="OpenLogin">Login</button>
    }
    
    @if (showlogin)
    {   
        <Blazicon Svg="FluentUiIcon.ErrorCircle" class="info" />  
    }      
</p>



<div class="logindetail">
    <label class="logindetail">Login informaiton:</label>
    @if (loggedin)
    {
        <p>
            Username: @login.Username
        </p>
        <p>
            Email: @login.Email
        </p>
        <p>
            Phone Number: @login.Phone
        </p>
    }

</div>


@code {
    //[SupplyParameterFromForm]
    public LoginDetail login { get; set; }

    //[Required]
    public string? uname { get; set; }

    //[Required]
    public string? mail { get; set; }

    public string? number { get; set; }


    public bool loggedin { get; set; }

    public bool showlogin { get; set; } = false;

    public class LoginDetail
    {       
        // [Required]
        // [MinLength(2, ErrorMessage = "Has to be at least 2 charcters long")]
        public string? Username { get; set; }

        // [Required]
        // [EmailAddress(ErrorMessage = "This is required")]
        public string? Email { get; set; }

        public string? Phone { get; set; }
    }

    public void Submit()
    {
        loggedin = true;
        if (number == null)
        {
            number = "N/A";
        }
        login = new LoginDetail { Username = uname, Email = mail, Phone = number };
    } 

    public void OpenLogin()
    {
        showlogin = true;
    }

    public void CloseLogin()
    {
        showlogin = false;
        login = new LoginDetail { };
    }
}

@page "/"

<PageTitle>Home</PageTitle>

<style>
    p {
        margin-top:10px;
    }
</style>

<h1>Hello, world!</h1>

Welcome to your new app. Click the modal button to open a form.

<p>
    <button @onclick="ShowModal" class="btn btn-primary">Show Modal</button>
</p>

@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;

    void ShowModal()
        => Modal.Show<EditFormModal>("Welcome to Blazored Modal");
}
